  </div>

  <div class="field">
    <%= form.label :task_priority %>
    <%= form.number_field :task_priority, id: :task_task_priority %>
  </div>

  <div class="field">
    <%= form.label :coment %>
    <%= form.text_field :coment, id: :task_coment %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id, id: :task_user_id %>
  </div>

  <div class="field">
    <%= form.label :creator %>
    <%= form.number_field :creator, id: :task_creator %>
  </div>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.number_field :project_id, id: :task_project_id %>
