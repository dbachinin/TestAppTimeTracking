
<h1>Tasks</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Theme</th>
      <th>Description</th>
      <th>Date range</th>
      <th>Task type</th>
      <th>Task priority</th>
      <th>Tame estimate</th>
      <th>Coments</th>
      <th>User</th>
      <th>Creator</th>
      <th>Project</th>
      <th>Logs</th>
      <th>Teken time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.theme %></td>
        <td><%= task.description %></td>
        <td><%= Date.parse(task.date_range.max.to_s).mjd - Date.parse(task.date_range.min.to_s).mjd%> days <%= Date.parse(task.date_range.max.to_s)%> to <%=Date.parse(task.date_range.max.to_s)%></td>
        <td><%= task.task_type %></td>
        <td><%= task.task_priority %></td>
        <td><%= task.estimate_time %></td>
        <td><%= task.coments %></td>
        <td><%= task.user_id.select{|i| User.find(i).name } %></td>
        <td><%= User.find(task.creator).name %></td>
        <td><%= task.project_id %></td>
        <td><%= task.logs %></td>
        <td><%= task.teken_time %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

