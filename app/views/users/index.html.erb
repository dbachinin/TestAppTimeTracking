<h2>Users</h2>
<div class="table-responsive-sm table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Admin?</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><div class="pic_in_list mx-auto"><%= render partial: "layouts/pic", locals: {id: user.id}, style: "max-width 20%" %></div></td>
        <td ><%= user.name %></td>
        <td><%= user.admin %></td>
        <td><%= user.email %></td>
        <% current_user.admin ? user = user : user = current_user %>
        <td><%= button_to 'Show', user_path(user), method: :get,class: "btn btn-primary" %></td>
        <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

