
<%= simple_form_for([@user,@project]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :project_name %>
    <%= f.input :task, collection: Task.all.map{|i| [i.theme, i.id.as_json.values[0]]}, input_html: { multiple: true } %>
    <%= f.input :description %>
    <%= f.hidden_field :uid, value: SecureRandom.uuid%>
    <%= f.hidden_field :user_id, value: @user.id.as_json.values[0]%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
