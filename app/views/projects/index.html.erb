<h1>Projects</h1>

<hr>
<div class="container">
  <div class="row">
    <% @projects.each do |project| %>
          <div class="col-lg-3">
            <div class="well">
              <div class="card my-4">
                <div class="card-header" >
              <h3 class="mb-0 text-center"><%= link_to "#{project.uid}", project_path(project.uid) %></h3>
              </div>
              <div class="card-body">
              <h1 class="card-text"><%= project.project_name %></h1>

            </div>
          </div>
          <% end %>
     </div>  
</div>
</div>
</div>
<hr>
<%= link_to 'New Project', new_user_project_path(@user, @project) if @user.admin%>