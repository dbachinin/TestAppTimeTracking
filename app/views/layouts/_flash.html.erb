<% if flash[:notice] %>   
<div class="alert alert-success">     
	<button type="button" class="close" data-dismiss="alert">&amp;times;
	</button>     
	<%= flash[:notice] %>   
</div> 
<% elsif flash[:error] %>   
<div class="alert alert-danger">     
	<button type="button" class="close" data-dismiss="alert">&amp;times;
	</button>     
	<%= flash[:error] %>   
</div> 
<% elsif flash[:alert] %>   
<div class="alert alert-warning">     
	<button type="button" class="close" data-dismiss="alert">&amp;times;
	</button>     
	<%= flash[:alert] %>   
</div> 
<% end %> 